{
  "$schema": "https://turbo.build/schema.json",

  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "env": ["OPENAI_API_KEY"],
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "deploy": {
      "dependsOn": ["^build", "OPENAI_API_KEY"]
    }
  }
}
